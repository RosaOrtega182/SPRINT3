    </div>
    
    <div class="form-group mt-3">
        <label class="fw-bold">Confirma la contrase単a</label>
        <input type="password" name="password2" class="form-control"  placeholder="Confirmar contrase単a">
    </div>

    <div class="form-group mt-3">
        <label for="" class="fw-bold">Tipo de usuario</label>
        <select name="tipo" class="form-control">
           <option value="1">Administrador</option>
           <option value="0">Normal</option>
        </select>
    </div>

    <div class="col-1">
    <button type="submit" class="btn btn-primary mt-3">Registrar</button>
    </div>
</form>
  
      </div>
       



        
  










