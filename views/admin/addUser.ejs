<div class="container  mt-3">
        
      
<h1 class="text-center">Registrar usuario</h1>
<a href="/admin/users" class="btn btn-primary">Regresar a ver todos los usuarios</a>
<br>

<form class= "row -4" method="post" action="/admin/users/addUser">

    <div class="col-6">
        <div class="form-group mt-3">
            <label class="fw-bold">Nombre</label>
            <input type="text" name="nombre" class="form-control" placeholder="Nombre">
        </div>
    </div>

    <div class="col-6">
        <div class="form-group mt-3">
            <label class="fw-bold">Apellido</label>
            <input type="text" name="apellido" class="form-control" placeholder="Apellido">
        </div>
    </div>

    <div class="col-6">
        <div class="form-group mt-3">
            <label class="fw-bold">Email</label>
            <input type="text" name="email" class="form-control" placeholder="Email">
        </div>
    </div>
    
    <div class="col-6">
        <div class="form-group mt-3">
            <label class="fw-bold">Usuario</label>
            <input type="text" name="usuario" class="form-control" placeholder="Usuario">
        </div>
    </div>

    <div class="form-group mt-3">
        <label class="fw-bold">Contrase単a</label>
